# Configuração de Produção - Portfolio API
# Copie este arquivo para .env e configure com os valores adequados

# Configuração da Base de Dados PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=portfolio_db
DB_USER=portfolio_user
DB_PASSWORD=CHANGE_THIS_PASSWORD_IN_PRODUCTION

# Configuração do Servidor
PORT=3000
NODE_ENV=production

# JWT Secret - DEVE ser alterado em produção
JWT_SECRET=CHANGE_THIS_JWT_SECRET_IN_PRODUCTION_USE_LONG_RANDOM_STRING
JWT_EXPIRES_IN=7d

# CORS - Configure com o domínio do frontend
CORS_ORIGIN=https://www.cesariomachava.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Configurações adicionais para produção
# SSL_KEY_PATH=/path/to/ssl/private.key
# SSL_CERT_PATH=/path/to/ssl/certificate.crt
# REDIS_URL=redis://localhost:6379
